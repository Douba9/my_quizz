{% extends 'base.html.twig' %}

{% block title %}Tous les utilisateurs{% endblock %}

{% block body %}
    <h1>Tous les utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>IsActive</th>
                <th>IsVerified</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subscribe in subscribes %}
            <tr>
                <td>{{ subscribe.id }}</td>
                <td>{{ subscribe.username }}</td>
                <td>{{ subscribe.password }}</td>
                <td>{{ subscribe.email }}</td>
                <td>{{ subscribe.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ subscribe.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ subscribe.roles ? subscribe.roles|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_show', {'id': subscribe.id}) }}">voir</a>
                    <a href="{{ path('app_admin_edit', {'id': subscribe.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">pas de r√©sultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_new') }}">Ajoutez un nouveau?</a>
{% endblock %}
